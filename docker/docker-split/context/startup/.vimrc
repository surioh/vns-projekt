" not vi compatible
set nocompatible
" line numbers
set number
"syntax highlighting and indendataion
filetype off
filetype plugin indent on
syntax on
set autoindent
set smartindent
set tabstop=2
set shiftwidth=2
set expandtab
" standard encoding - maybe not necessary
set encoding=utf-8
" highlight incremantal ignorecase smartcase
set hlsearch
set incsearch
set ignorecase
set smartcase
set showmatch

set showmode
set showcmd
"
set backspace=indent,eol,start

set visualbell
set t_vb=

set noruler
set path+=**
set wildmenu



set shortmess=a
set noignorecase
set spelllang=de_de

